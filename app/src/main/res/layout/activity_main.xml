<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <data>

    </data>

    <RelativeLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="ivakhnenko.customviewexample.MainActivity">


        <ListView
            android:id="@+id/listView"
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:layout_alignParentStart="true" android:layout_alignParentTop="true"/>
        <ProgressBar
            android:id="@+id/progressBar2"
            android:visibility="gone"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_centerVertical="true" android:layout_centerHorizontal="true"/>
        <TextView
            android:id="@+id/emptyView"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_centerHorizontal="true" android:layout_centerVertical="true"
            android:text="There is no users"/>
    </RelativeLayout>
</layout>

